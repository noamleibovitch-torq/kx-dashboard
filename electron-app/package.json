{
  "name": "kx-dashboard",
  "version": "1.2.2",
  "description": "KX Dashboard - Native macOS Electron App for Torq Analytics",
  "main": "main.js",
  "scripts": {
    "start": "pkill -f 'KX Dashboard/electron-app.*Electron' || true && electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --mac --win --linux"
  },
  "keywords": [
    "dashboard",
    "torq",
    "analytics",
    "electron"
  ],
  "author": "KX Dashboard",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "chart.js": "^4.4.1",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.kx.dashboard",
    "productName": "KX Dashboard",
    "publish": {
      "provider": "github",
      "owner": "noamleibovitch-torq",
      "repo": "kx-dashboard",
      "private": true,
      "releaseType": "release"
    },
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "darkModeSupport": true
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "api.js",
      "queries.js",
      "hot-update.js",
      "index.html",
      "styles.css",
      "assets/**/*",
      "sql/**/*",
      "jq/**/*",
      ".env"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/noamleibovitch/KX-Dashboard.git"
  }
}
